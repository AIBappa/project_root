{
    "name": "Product_Devcontainer",
    "dockerComposeFile": [
        "../docker-compose.yml",
        "docker-compose.debug.yml"
    ],
    "service": "django",
    "workspaceFolder": "/app/backend",
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind,consistency=consistent",
        "source=${localWorkspaceFolder}/backend,target=/app/backend,type=bind,consistency=consistent",
        "source=${localWorkspaceFolder}/frontend,target=/app/frontend,type=bind,consistency=consistent"
    ],
    "forwardPorts": [8000, 3000, 5432, 6379, 9092, 80, 9090, 3001, 8080],
    "runServices": [
        "django",
        "react",
        "redis",
        "kafka",
        "zookeeper",
        "grafana",
        "dbeaver",
        "postgres",
        "prometheus"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint",
                "redhat.vscode-yaml",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "eslint.validate": [
                    "javascript",
                    "typescript"
                ],
                "python.pythonPath": "/usr/local/bin/python",
                "python.formatting.provider": "black",
                "files.autoSave": "afterDelay"
            }
        }
    },
    "postCreateCommand": "echo 'Dev container with Docker CLI is ready!'"
}



